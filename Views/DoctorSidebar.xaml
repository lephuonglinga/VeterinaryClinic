<UserControl x:Class="VeterinaryClinic.Views.DoctorSidebar"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
            xmlns:local="clr-namespace:VeterinaryClinic.Views"  
            mc:Ignorable="d"   
            d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel x:Name="Sp_DoctorSidebar" Grid.Column="0" Background="#0E2954">
        <!-- Logo/Title -->
        <Button Content="Hide"
                Padding="10" 
                FontSize="10"                 
                Background="#0E2954" 
                Foreground="White" 
                BorderThickness="0"
                Width="40"
                Name="Control"
                Click="Button_Click" HorizontalAlignment="Right"/>

        <StackPanel Name="Menu">
            <!-- Logo/Title -->
        <TextBlock Text="Vet Clinic Doctor"  
               FontSize="24"  
               FontWeight="Bold"  
               Foreground="White"  
               HorizontalAlignment="Center"  
               Margin="0,20,0,20" />

        <!-- Menu -->
        <ListBox Background="Transparent" BorderThickness="0" Foreground="White">
            <ListBoxItem Content="🏠 Dashboard" Padding="10" FontSize="17" FontWeight="Bold"/>
            <ListBoxItem Content="👤 Clients" x:Name="Client" Padding="10" FontSize="17" FontWeight="Bold" Selected="Client_Selected"/>
            <ListBoxItem Content="🐶 Patients" x:Name="Patient" Padding="10" FontSize="17" FontWeight="Bold" Selected="Patient_Selected"/>
            <ListBoxItem Content="📜 Cases" Name="Cases" Padding="10" FontSize="17" FontWeight="Bold" Selected="Cases_Selected"/>
            <ListBoxItem Content="📄 Documents" Padding="10" FontSize="17" FontWeight="Bold"/>
        </ListBox>

        <!-- Optional: Profile at bottom -->
        <StackPanel VerticalAlignment="Bottom" Margin="10,20,10,10">
            <Separator Margin="0,10"/>
            <TextBlock Text="Diana Mary" FontSize="12" Foreground="White"/>
            <TextBlock Text="Workspace one" FontSize="10" Foreground="Wheat"/>
        </StackPanel>
        </StackPanel>
        
    </StackPanel>
</UserControl>
