<Window x:Class="VeterinaryClinic.CommonView.ResetPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VeterinaryClinic.CommonView"
        mc:Ignorable="d"
        Title="ResetPassword" Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8FAFC">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005a9e"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#D0D7DE"/>
                                <Setter Property="Foreground" Value="#8B949E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D7DE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#8B949E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern PasswordBox Style -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D7DE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#8B949E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Background with subtle gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F8FAFC" Offset="0"/>
                <GradientStop Color="#E2E8F0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Content Card -->
        <Border Background="White"
                CornerRadius="12"
                Margin="40"
                Padding="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                MaxWidth="380"
                MinWidth="350">
            <Border.Effect>
                <DropShadowEffect Color="#00000020" 
                                BlurRadius="20" 
                                ShadowDepth="8" 
                                Direction="270"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="40">
                <StackPanel>
                    <!-- Header Section -->
                    <StackPanel Margin="0,0,0,32" HorizontalAlignment="Center">
                        <!-- Icon -->
                        <Border Background="#007ACC" 
                            Width="56" 
                            Height="56" 
                            CornerRadius="28"
                            Margin="0,0,0,16"
                            HorizontalAlignment="Center">
                            <TextBlock Text="🔒" 
                                   FontSize="24" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="Reset Password" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#1F2937"
                               TextAlignment="Center"
                               Margin="0,0,0,8"/>

                        <TextBlock Text="Follow the steps below to reset your password securely" 
                               FontSize="14" 
                               Foreground="#6B7280"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Step 1: Email Input -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Step 1: Enter your email address" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="#374151"
                               Margin="0,0,0,12"/>

                        <TextBlock Text="Email Address" 
                               FontSize="13" 
                               FontWeight="Medium" 
                               Foreground="#4B5563"
                               Margin="0,0,0,6"/>

                        <TextBox x:Name="EmailBox" 
                             Height="44" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,12"/>

                        <Button x:Name="BtnSendCode" 
                            Content="Send Verification Code" 
                            Height="44" 
                            Style="{StaticResource ModernButton}"
                            Click="BtnSendCode_Click"/>
                    </StackPanel>

                    <!-- Step 2: OTP Input -->
                    <TextBlock Text="Verification Code" 
                           FontSize="13" 
                           FontWeight="Medium" 
                           Foreground="#4B5563"
                           Margin="0,16,0,6"/>

                    <TextBox x:Name="OtpBox" 
                         Height="44" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,12"
                         Visibility="Collapsed"/>

                    <Button x:Name="BtnVerifyCode" 
                        Content="Verify Code" 
                        Height="44" 
                        Style="{StaticResource ModernButton}"
                        Visibility="Collapsed"
                        Click="BtnVerifyCode_Click"/>

                    <!-- Step 3: New Password Input -->
                    <TextBlock Text="New Password" 
                           FontSize="13" 
                           FontWeight="Medium" 
                           Foreground="#4B5563"
                           Margin="0,16,0,6"/>

                    <PasswordBox x:Name="NewPasswordBox" 
                             Height="44" 
                             Style="{StaticResource ModernPasswordBox}"
                             Margin="0,0,0,12"
                             Visibility="Collapsed"/>

                    <Button x:Name="BtnSavePassword" 
                        Content="Save New Password" 
                        Height="44" 
                        Style="{StaticResource ModernButton}"
                        Visibility="Collapsed"
                        Click="BtnSavePassword_Click"/>

                    <!-- Footer -->
                    <TextBlock Text="Need help? Contact support for assistance" 
                           FontSize="12" 
                           Foreground="#9CA3AF"
                           TextAlignment="Center"
                           Margin="0,20,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>