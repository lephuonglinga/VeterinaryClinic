<Page x:Class="VeterinaryClinic.AdminView.AdminPrescribedMedPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VeterinaryClinic.AdminView"
      xmlns:views="clr-namespace:VeterinaryClinic.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPrescribedMedPage">

    <Grid Background="#F8F9FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <views:AdminSidebar Grid.Column="0" />
        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock Text="Prescribed Medical Management" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#799EFF"/>
            <DataGrid Name="DgPresMed" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Prescription ID" 
                          Binding="{Binding PrescriptionId}" 
                          Width="*"/>
                    <DataGridTextColumn Header="Medication ID" 
                          Binding="{Binding MedicationId}" 
                          Width="*"/>
                    <DataGridTextColumn Header="Frequency" 
                          Binding="{Binding Frequency}" 
                          Width="*"/>
                    <DataGridTextColumn Header="Route" 
                          Binding="{Binding Route}"                                    
                           Width="*"/>
                    <DataGridTextColumn Header="Date" 
                          Binding="{Binding Date}" 
                          Width="*"/>
                    <DataGridTextColumn Header="Quantity" 
                          Binding="{Binding Quantity}" 
                          Width="*"/>
                    <DataGridTextColumn Header="Sale Price" 
                          Binding="{Binding Medication.SalePricePerUnit}" 
                          Width="*"/>
                    <DataGridTextColumn Header="Total Price" 
                          Binding="{Binding TotalPrice}" 
                          Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
