<Page x:Class="VeterinaryClinic.AdminView.PharmacyInventory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VeterinaryClinic.AdminView"
      xmlns:views="clr-namespace:VeterinaryClinic.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PharmacyInventory">
    
    <Page.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E40AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Save Button Style -->
        <Style x:Key="SaveButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#047857"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#2563EB"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="FontSize" Value="14"/>

        </Style>

        <!-- Modern DataGrid Style -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F3F4F6"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowHeight" Value="48"/>
            <Setter Property="CanUserReorderColumns" Value="True"/>
        </Style>

        <!-- Modern DataGrid Header Style -->
        <Style x:Key="ModernDataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Height" Value="44"/>
        </Style>

        <!-- Modern DataGrid Cell Style -->
        <Style x:Key="ModernDataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EBF4FF"/>
                    <Setter Property="Foreground" Value="#1E40AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DatePicker Style -->
        <Style x:Key="ModernDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <DatePickerTextBox x:Name="PART_TextBox" 
                                                 Grid.Column="0" 
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 VerticalAlignment="Center"/>
                                <Button x:Name="PART_Button" 
                                      Grid.Column="1" 
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Width="20"
                                      Height="20"
                                      Content="📅"
                                      FontSize="12"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#2563EB"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#F8FAFC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <views:AdminSidebar Grid.Column="0" />

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Page Header -->
            <Border Grid.Row="0" 
                    Background="White" 
                    CornerRadius="12" 
                    Padding="24" 
                    Margin="0,0,0,24"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Pharmacy Inventory Management" 
                                 FontSize="28" 
                                 FontWeight="Bold" 
                                 Foreground="#111827" 
                                 Margin="0,0,0,8"/>
                        <TextBlock Text="Manage medication inventory, pricing, and expiration dates" 
                                 FontSize="16" 
                                 Foreground="#6B7280"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" 
                              Orientation="Horizontal" 
                              VerticalAlignment="Center">
                        <Border Background="#FEF3C7" 
                              CornerRadius="6" 
                              Padding="8,4" 
                              Margin="0,0,12,0">
                            <TextBlock Text="⚠️ Check Expiring Items" 
                                     FontSize="12" 
                                     FontWeight="Medium" 
                                     Foreground="#92400E"/>
                        </Border>
                        <TextBlock Text="Total Items: " 
                                 FontSize="14" 
                                 FontWeight="Medium" 
                                 Foreground="#374151" 
                                 VerticalAlignment="Center" 
                                 Margin="0,0,8,0"/>
                        <TextBlock x:Name="TotalItemsText" 
                                 Text="0" 
                                 FontSize="14" 
                                 FontWeight="Bold" 
                                 Foreground="#2563EB" 
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Control Panel -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="12" 
                    Padding="24" 
                    Margin="0,0,0,24"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <StackPanel Grid.Column="0" Margin="0,0,16,0">
                        <TextBlock Text="Search Inventory" 
                                 FontSize="12" 
                                 FontWeight="Medium" 
                                 Foreground="#6B7280" 
                                 Margin="0,0,0,4"/>
                        <TextBox x:Name="SearchBox" 
                               Style="{StaticResource ModernTextBoxStyle}"
                               Height="44"/>
                    </StackPanel>

                    <!-- Category Filter -->
                    <StackPanel Grid.Column="1" Margin="0,0,16,0">
                        <TextBlock Text="Category" 
                                 FontSize="12" 
                                 FontWeight="Medium" 
                                 Foreground="#6B7280" 
                                 Margin="0,0,0,4"/>
                        <ComboBox x:Name="CategoryFilterComboBox" 
                                Style="{StaticResource ModernComboBoxStyle}"
                                Width="140" 
                                Height="44">
                            <ComboBoxItem Content="All Categories"/>
                            <ComboBoxItem Content="Antibiotics"/>
                            <ComboBoxItem Content="Pain Relief"/>
                            <ComboBoxItem Content="Vitamins"/>
                            <ComboBoxItem Content="Surgery"/>
                            <ComboBoxItem Content="Other"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Stock Status Filter -->
                    <StackPanel Grid.Column="2" Margin="0,0,16,0">
                        <TextBlock Text="Stock Status" 
                                 FontSize="12" 
                                 FontWeight="Medium" 
                                 Foreground="#6B7280" 
                                 Margin="0,0,0,4"/>
                        <ComboBox x:Name="StockStatusComboBox" 
                                Style="{StaticResource ModernComboBoxStyle}"
                                Width="140" 
                                Height="44">
                            <ComboBoxItem Content="All Items"/>
                            <ComboBoxItem Content="In Stock"/>
                            <ComboBoxItem Content="Low Stock"/>
                            <ComboBoxItem Content="Out of Stock"/>
                            <ComboBoxItem Content="Expiring Soon"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Add New Item Button -->
                    <StackPanel Grid.Column="3" Margin="0,0,16,0">
                        <TextBlock Text="Actions" 
                                 FontSize="12" 
                                 FontWeight="Medium" 
                                 Foreground="#6B7280" 
                                 Margin="0,0,0,4"/>
                        <Button x:Name="AddNewItemButton" 
                              Style="{StaticResource ModernButtonStyle}"
                              Width="120" 
                              Height="44"
                              Content="+ Add New Item"/>
                    </StackPanel>

                    <!-- Export Button -->
                    <StackPanel Grid.Column="4">
                        <TextBlock Text="Export" 
                                 FontSize="12" 
                                 FontWeight="Medium" 
                                 Foreground="#6B7280" 
                                 Margin="0,0,0,4"/>
                        <Button x:Name="ExportButton" 
                              Style="{StaticResource ModernButtonStyle}"
                              Width="100" 
                              Height="44"
                              Content="📊 Export"
                              Background="#8B5CF6">
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Data Grid Container -->
            <Border Grid.Row="2" 
                    Background="White" 
                    CornerRadius="12" 
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    Margin="0,0,0,24">
                <DataGrid Name="DgPharmacy" 
                        AutoGenerateColumns="False" 
                        Style="{StaticResource ModernDataGridStyle}"
                        ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                        CellStyle="{StaticResource ModernDataGridCellStyle}"
                        Margin="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Item ID" 
                                          Binding="{Binding ItemId}" 
                                          Width="100"
                                          IsReadOnly="True"/>
                        <DataGridTextColumn Header="Trade Name" 
                                          Binding="{Binding TradeName}" 
                                          Width="*"
                                          MinWidth="150"/>
                        <DataGridTextColumn Header="Generic Name" 
                                          Binding="{Binding GenericName}" 
                                          Width="*"
                                          MinWidth="150"/>
                        <DataGridTextColumn Header="Category" 
                                              Binding="{Binding Category}" 
                                              Width="130">
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Unit" 
                                          Binding="{Binding Unit}" 
                                          Width="80"/>
                        <DataGridTextColumn Header="Cost Price" 
                                          Binding="{Binding CostPricePerUnit, StringFormat='{}{0:C}'}" 
                                          Width="110"/>
                        <DataGridTextColumn Header="Sale Price" 
                                          Binding="{Binding SalePricePerUnit, StringFormat='{}{0:C}'}" 
                                          Width="110"/>
                        <DataGridTextColumn Header="Barcode" 
                                          Binding="{Binding Barcode}" 
                                          Width="120"/>
                        <DataGridTextColumn Header="Expiration Date" Width="120" Binding="{Binding ExpirationDate}">
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Action Panel -->
            <Border Grid.Row="3" 
                    Background="White" 
                    CornerRadius="12" 
                    Padding="24" 
                    BorderBrush="#E5E7EB"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" 
                              Orientation="Horizontal" 
                              VerticalAlignment="Center">
                        <TextBlock Text="💡 " 
                                 FontSize="16" 
                                 VerticalAlignment="Center" 
                                 Margin="0,0,8,0"/>
                        <TextBlock Text="Click on cells to edit. Use the date picker for expiration dates. Remember to save your changes." 
                                 FontSize="14" 
                                 Foreground="#6B7280" 
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" 
                              Orientation="Horizontal">
                        <Button x:Name="CancelButton" 
                              Content="Cancel Changes" 
                              Style="{StaticResource ModernButtonStyle}"
                              Background="#6B7280"
                              Margin="0,0,12,0"
                              Width="140">
                        </Button>
                        <Button x:Name="SaveButton" 
                              Content="💾 Save Changes" 
                              Click="SaveButton_Click"
                              Style="{StaticResource SaveButtonStyle}"
                              Width="160"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>