<Page x:Class="VeterinaryClinic.DoctorView.DoctorProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VeterinaryClinic.DoctorView"
      xmlns:views="clr-namespace:VeterinaryClinic.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DoctorProfile">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <views:DoctorSidebar Grid.Column="0"/>
        <Border Grid.Column="1" Grid.ColumnSpan="2" Background="White" CornerRadius="10" Margin="10" Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Header -->
                    <DockPanel Margin="0,0,0,20">
                        <TextBlock Text="Edit profile" FontSize="30" FontWeight="Bold" DockPanel.Dock="Left" Foreground="#03A6A1"/>
                        <Ellipse Width="150" Height="150" Stroke="#DDD" StrokeThickness="1" DockPanel.Dock="Right" HorizontalAlignment="Right">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Assets/pet-login.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </DockPanel>

                    <!-- Responsive Form -->
                    <UniformGrid Columns="2" Margin="0,0,0,10" HorizontalAlignment="Stretch">

                        <StackPanel Margin="5">
                            <TextBlock Text="VcnNo"/>
                            <TextBox Name="txtVcn" IsReadOnly="True" Height="40" Padding="10,5">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="Email"/>
                            <TextBox Name="txtEmail" IsReadOnly="True" Height="40" Padding="10,5">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="First Name"/>
                            <TextBox Name="txtFirstName" Height="40" Padding="10,5">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>

                        <!-- Last Name -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Last Name"/>
                            <TextBox Name="txtLastName" Height="40" Padding="10,5">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>
                        <StackPanel Margin="5" Grid.ColumnSpan="2">
                            <TextBlock Text="Year Graduated"/>
                            <TextBox Name="txtYear" Height="40" Padding="10,5">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>

                        <!-- Address -->
                        <StackPanel Margin="5" Grid.ColumnSpan="2">
                            <TextBlock Text="Phone No"/>
                            <TextBox Name="txtPhone" Height="40" Padding="10,5">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>
                    </UniformGrid>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Update" Width="120" Height="40" Margin="5" Click="Button_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#03A6A1" CornerRadius="8" BorderBrush="#03A6A1" BorderThickness="1">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" 
                          TextElement.Foreground="White" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
